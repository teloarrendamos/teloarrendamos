<!DOCTYPE html>
<html>
  <head>
    <title>RentalApp</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <header class="home-index">
      <div class="upper-blue-margin"></div>

      <div class="login-nav">
        <div class="container">
          <div class="inner-container">
            <div class="login" id="login-dropdown-button">
              <div class="p-container">
                <p>INICIAR SESIÓN</p>  
              </div>
              <ul id="login-dropdown">
                <%= link_to new_company_session_path do %>
                  <li>Company</li>
                <% end %>
                <%= link_to new_user_session_path do %>
                  <li>User</li>  
                <% end %>
              </ul>
            </div>
            <div class="sign-up" id="sign-up-dropdown-button">
              <div class="p-container">
                <p>REGISTRARSE</p>
              </div>
              
              <ul id="sign-up-dropdown">
                <%= link_to new_company_registration_path do %>
                  <li>Company</li>
                <% end %>
                <%= link_to new_user_registration_path do %>
                  <li>User</li>  
                <% end %>
              </ul>
            </div>  
          </div>
        </div>
      </div>


      <nav>
        <div class="logo">
          <%= link_to root_path do %>
            <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/logos/logo-transparente.png" alt="logo-arriendalo-y-punto">
          <% end %>
        </div>
        <div class="nav-div">
          <ul>
            <li class="que-es"><%= link_to "QUÉ ES", pages_what_is_path %></li>
            <li class="como-funciona"><%= link_to "CÓMO FUNCIONA", pages_how_it_works_path %></li>
            <li class="garantia"><%= link_to "GARANTÍA" %></li>
            <li class="preguntas"><%= link_to "PREGUNTAS FRECUENTES", pages_faq_path %></li>
          </ul>  
        </div>
      </nav>
    </header>
    <%= yield %>
    
    <div class="footer-image">
      <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/productos-celestes.png" alt="footer-image">
    </div>

    <footer>
      <div class="column logo-and-social">
        <div class="logo">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/logos/logo-blanco-transparente.png" alt="logo-arriendalo">
        </div>
        <div class="slogan">
          <p>Deja que tus cosas trabajen por ti.</p>
        </div>
        <div class="social-icons">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/social-icons/facebook-logo.png" alt="facebook-icon">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/social-icons/twitter-logo.png" alt="twitter-icon">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/social-icons/instagram-logo.png" alt="instagram-icon">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/social-icons/youtube-logo.png" alt="youtube-icon">
          <img src="https://s3-us-west-2.amazonaws.com/teloarrendamos-static-assets/icons/social-icons/google-logo.png" alt="google-icon">
        </div>
      </div>

      <div class="column nav-list">
        <ul>
          <li><%= link_to "QUÉ ES", pages_what_is_path %></li>
          <li><%= link_to "CÓMO FUNCIONA", pages_how_it_works_path %></li>
          <li><%= link_to "GARANTÍA" %></li>
          <li><%= link_to "PREGUNTAS FRECUENTES", pages_faq_path %></li>
          <li><%= link_to "CONTACTO" %></li>
        </ul>  
      </div>

      <div class="column contact">
        <div class="politics">
          <ul>
            <li>MEDIOS DE PAGO</li>
            <li>POLITÍCAS DE DEVOLUCIÓN</li>
          </ul>
        </div>
        <div class="contact-info">
          <p>Mail: contacto@arriendalo.cl</p>
          <p>Tel. 2 24567890</p>
          <p>Cel: +56 8 9876 7663</p>
        </div>
      </div>

      <div class="column payment-logos">
        <img src="" alt="WebPay-icon">
        <img src="" alt="credit-cards-icons">
      </div>
    </footer>

    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>


  </body>
</html>
