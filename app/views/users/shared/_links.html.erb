<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  	<div class="face-callout">
  		<h4>Inicia sesión con tu cuenta de Facebook</h4>
  	</div>
  	<%= link_to omniauth_authorize_path(resource_name, provider) do %>
	  	<div class="facebook-login">
			<!-- <p>Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}</p> -->
			<p>Iniciar Sesion con Facebook</p>
		</div>
  	<% end %>	
  	
  <% end -%>
<% end -%>
