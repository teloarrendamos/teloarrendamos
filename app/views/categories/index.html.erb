<section class="categories">
	<div class="wrapper">
	<% @categories.each do |category| %>
		<div class="category-frame">
			<div>
				<%= link_to image_tag(category.category_image), category_path(category.name) %>	
			</div>
			<div>
				<%= link_to category.name, category_path(category.name) %>	
			</div>
		</div>
	<% end %>		
	</div>
</section>
